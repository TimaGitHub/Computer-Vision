const toggleHidden=e=>{e.classList.toggle("hidden")},contentsMenu=document.getElementById("menu-wrapper"),contentsMenuButton=document.getElementById("menu-open-button"),toggleMenuOpened=()=>{toggleHidden(contentsMenuButton),toggleHidden(contentsMenu),document.body.classList.toggle("with-menu")},addToggleMenuEvent=()=>{const e=document.getElementById("menu"),n=document.getElementById("menu-bg"),t=document.getElementById("menu__close-button"),o=document.getElementById("menu-open-button");n.addEventListener("click",toggleMenuOpened),t.addEventListener("click",toggleMenuOpened),o.addEventListener("click",toggleMenuOpened),e.addEventListener("click",(e=>{var n;"a"===(null===(n=e.target.tagName)||void 0===n?void 0:n.toLowerCase())&&Boolean(e.target.href)&&toggleMenuOpened()})),contentsMenu.addEventListener("click",(n=>{e.contains(n.target)||toggleMenuOpened()}))},bookMenu=document.querySelector(".menu__content_book"),currentArticleMenu=document.querySelector(".menu__content_article"),addToggleSubmenuEvent=()=>{const e=document.querySelector(".menu__button_forward"),n=document.querySelector(".menu__button_back"),t=document.getElementById("menu-item_article_active");e.addEventListener("click",(()=>{toggleHidden(currentArticleMenu),toggleHidden(bookMenu)})),n.addEventListener("click",(()=>{toggleHidden(currentArticleMenu),toggleHidden(bookMenu)})),t.addEventListener("click",(()=>{toggleHidden(currentArticleMenu),toggleHidden(bookMenu)}))};addToggleMenuEvent(),currentArticleMenu&&(bookMenu.classList.add("hidden"),addToggleSubmenuEvent());